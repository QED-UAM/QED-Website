<%- include("partials/header", { title: __("contact.title") }) %>

<div class="max-w-3xl mx-auto">
    <div class="text-center">
        <h1 class="text-3xl font-bold mb-4"><%= __("contact.ourSocialMedia") %></h1>
        <div class="flex justify-center space-x-8">
            <%- include("partials/components/icons/socialMedia/instagram", { user: "qed_uam", size: 8 }) %>

            <%- include("partials/components/icons/socialMedia/x", { user: "qed_uam", size: 8 }) %>

            <%- include("partials/components/icons/socialMedia/linkedin", { user: "qed-matematicas", size: 8 }) %>

            <%- include("partials/components/icons/socialMedia/discord", { invite: "VRd3dWx6SX", size: 8 }) %>
        </div>
    </div>
</div>

<div class="max-w-3xl mx-auto mt-6 p-4 border-2 border-gray-300 dark:border-gray-500 rounded-xl">
    <h2 class="text-2xl font-bold mb-4 text-center"><%= __("contact.contactUs") %></h2>
    <form action="/send-email" method="POST" class="space-y-4">
        <div>
            <label for="name" class="block text-sm font-medium text-gray-700 dark:text-gray-300"><%= __("contact.name") %></label>
            <input type="text" id="name" name="name" required class="mt-1 p-2 border border-gray-300 rounded-md w-full dark:border-gray-500 bg-gray-200 dark:bg-gray-600 dark:text-white">
        </div>
        <div>
            <label for="email" class="block text-sm font-medium text-gray-700 dark:text-gray-300"><%= __("contact.email") %></label>
            <input type="email" id="email" name="email" required class="mt-1 p-2 border border-gray-300 rounded-md w-full dark:border-gray-500 bg-gray-200 dark:bg-gray-600 dark:text-white">
        </div>
        <div>
            <label for="message" class="block text-sm font-medium text-gray-700 dark:text-gray-300"><%= __("contact.message") %></label>
            <textarea id="message" name="message" rows="4" required class="mt-1 p-2 border border-gray-300 rounded-md w-full dark:border-gray-500 bg-gray-200 dark:bg-gray-600 dark:text-white"></textarea>
        </div>
        <div class="text-center">
            <button type="submit" class="w-full sm:w-auto px-4 py-2 text-white rounded-md shadow-sm hover:bg-blue-700 dark:hover:bg-blue-300 focus:ring-2 focus:ring-blue-600 dark:focus:ring-blue-400 bg-blue-500 transition-colors"><%= __("contact.submit") %></button>
        </div>
    </form>
</div>

<%- include("partials/footer") %>
